<html>
  <head>
    <title>Edit Staff</title>
  </head>
  <body>
    <h1>Edit Staff</h1>
    <form action="/updateStaff/<%= staff.staff_id %>" method="POST">
      Last Name:
      <input
        type="text"
        name="last_name"
        value="<%= staff.last_name %>"
      /><br />
      First Name:
      <input
        type="text"
        name="first_name"
        value="<%= staff.first_name %>"
      /><br />
      Hire Date:
      <input
        type="date"
        name="hire_date"
        value="<%= staff.hire_date %>"
      /><br />
      Salary:
      <input type="text" name="salary" value="<%= staff.salary %>" /><br />
      Job Title:
      <input
        type="text"
        name="job_title"
        value="<%= staff.job_title %>"
      /><br />
      <input type="submit" value="Update Staff" />
    </form>
  </body>
</html>
